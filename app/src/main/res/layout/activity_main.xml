<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_main">
    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="200px"
        android:layout_marginLeft="200px"
        android:background="@drawable/editsharp"
        android:hint="请输入账号"
        android:layout_above="@id/pwd" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="200px"
        android:layout_marginLeft="200px"
        android:background="@drawable/editsharp"
        android:drawableRight="@drawable/biyan"
        android:inputType="textPassword"
        android:hint="请输入密码" />

    <Button
        android:id="@+id/ok"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:text="登录"
        android:layout_below="@id/pwd"
        android:layout_marginRight="400px"
        android:layout_marginLeft="400px"
        android:background="@drawable/btn_circle"
        android:textSize="25dp"
        android:textColor="#1bde4f" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:src="@drawable/xuexiao"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:text="记住密码"
        android:id="@+id/remembPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwd"
        android:layout_marginRight="300px"
        android:layout_marginLeft="200px"
        android:layout_marginTop="20dp"
        android:textColor="#fcece7e6"
        />
</RelativeLayout >